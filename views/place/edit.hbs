<h3>Edit Place</h3>
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <form action="/places/{{place._id}}" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="input-fiel">
                        <select id="stauts" name="status">
                            <option value="public">Public</option>
                            <option value="private">Private</option>
                        </select>
                        <label for="status">Status</label>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="name" name="name" type="text" class="validate" value="{{place.name}}">
                            <label for="name">Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="address" name="address" type="text" class="validate" value="{{place.address}}">
                            <label for="address">Address</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="city" name="city" type="text" class="validate" value="{{place.city}}">
                            <label for="city">City</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="state" name="state" type="text" class="validate" value="{{place.state}}">
                            <label for="state">State</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="zip" name="zip" type="text" class="validate" value="{{place.zip}}">
                            <label for="zip">ZIP</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="country" name="country" type="text" class="validate" value="{{place.country}}">
                            <label for="country">Country</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="info" name="info" type="text" class="validate" value="{{place.info}}">
                            <label for="info">Additional Information</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field">
                            <h5>List of Invited Guests:</h5>
                            <textarea id="information" name="information">{{place.information}}</textarea>
                        </div>
                    </div>
                    <div class="row">
                        <input type="submit" value="Save" class="btn  teal darken-4">
                        <a href="/dashboard" class="btn black">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
