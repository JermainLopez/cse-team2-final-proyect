<h1>Places</h1>

<div class="row">
    {{#each places}}
    <div class="row">
            <div class="col s12 m6">
            <div class="card">
                <div class="card-image">
                    <div>
                        <!-- Slideshow container -->
                        <div class="slideshow-container">

                        <!-- Full-width images with number and caption text -->
                        <div class="mySlides fade">
                            <div class="numbertext">1 / 3</div>
                            <img class="image-card" src="{{image}}" alt="{{name}} 1" style="width:100%">
                            <div class="text">{{name}} 1</div>
                        </div>

                        <div class="mySlides fade">
                            <div class="numbertext">2 / 3</div>
                            <img class="image-card" src="{{image2}}" alt="{{name}} 2" style="width:100%">
                            <div class="text">{{name}} 2</div>
                        </div>

                        <div class="mySlides fade">
                            <div class="numbertext">3 / 3</div>
                            <img class="image-card" src="{{image3}}" alt="{{name}} 3" style="width:100%">
                            <div class="text">{{name}} 3</div>
                        </div>

                        <!-- Next and previous buttons -->
                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                        <a class="next" onclick="plusSlides(1)">&#10095;</a>
                        </div>
                        <br>

                        <!-- The dots/circles -->
                        <div style="text-align:center">
                        <span class="dot" onclick="currentSlide(1)"></span>
                        <span class="dot" onclick="currentSlide(2)"></span>
                        <span class="dot" onclick="currentSlide(3)"></span>
                    </div>
                </div>
                <h4>{{name}}</h4>
                <p>{{city}}</p>
                <h5>{{country}}</h5>
                <p class="info">{{information}}</p>
                <a href="/places/{{_id}}" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">edit</i></a>
                </div>
                <div class="card-content">
                </div>
            </div>
            </div>
        </div>
    {{else}}
        <p>No places to display</p>
    {{/each}}
</div>


