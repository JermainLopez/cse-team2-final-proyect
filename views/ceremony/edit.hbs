<h3>Edit Ceremonies</h3>
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <form action="/ceremonies/{{ceremony._id}}" method="POST">
                <input type="hidden" name="_method" value="PUT">
                    <div class="input-fiel">
                        <select id="stauts" name="status">
                            <option value="public">Public</option>
                            <option value="private">Private</option>
                        </select>
                        <label for="status">Status</label>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="name" name="name" type="text" class="validate" value="{{ceremony.name}}">
                            <label for="name">Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="place" name="place" type="text" class="validate" value="{{ceremony.place}}">
                            <label for="place">Place</label>
                        </div>
                    </div>
                    <div class="imput-date">
                        <div class="input-field col s12">
                            <input type="date" name="date" id="date" value="{{ceremony.date}}">
                            <label for="date">Date</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="host" name="host" type="text" class="validate" value="{{ceremony.host}}">
                            <label for="host">Host</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="guests" name="guests" type="text" class="validate" value="{{ceremony.guests}}">
                            <label for="guests">Guests</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field">
                            <h5>Details:</h5>
                            <textarea id="information" name="information" value="{{ceremony.information}}"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="memories" name="memories" type="text" class="validate" value="{{ceremony.memories}}">
                            <label for="memories">Memories (link of the event video)</label>
                        </div>
                    </div>
                    <div class="row">
                        <input type="submit" value="Save" class="btn  teal darken-4">
                        <a href="/dashboard" class="btn black">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>